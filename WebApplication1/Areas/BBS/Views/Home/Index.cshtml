@using Koo.Web.UI.Controls
    @model PagedList<Koo.Web.Areas.BBS.Models.Post>

    <div class="example">
        <div>
            <canvas height="300"></canvas>
        </div>
    </div>

    <div id="PostsList">
        <table style="width:800px" class="text-center" align="center">
            @foreach (var Data in Model)
        {
        <tr>
            <td style="width:40px" align="center" rowspan="2">
                <span class="icon-pictures " style="height:30px;width:30px;text-align:center;align-content:center;glyph-orientation-horizontal:inherit"></span>
            </td>
            <td align="left">
                <a href="@Url.Action("Details", "Home", new { id=Data.Id })">@Data.Title</a>
            </td>
            <td><label title="浏览数" class="text-right" style="padding-right:10px">@Data.BrowseNum</label></td>
        </tr>
        <tr style="height:0px">
            <td align="left">
                <span>
                    <label title="发贴人和时间">shayne&nbsp;&nbsp;@Data.CreateDate</label>
                </span>
            </td>
            <td><label title="回复数" class="text-right" style="padding-right:10px">1</label></td>
        </tr>
        <tr style="width:800px" class="text-center">
            <td colspan="3" style="height:0px">
                <hr class="bg-gray" />
            </td>
        </tr>
        }
        </table>
        <div class="text-center">
            @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "pageIndex"}, 
            new MvcAjaxOptions { UpdateTargetId = "PostsList", EnablePartialLoading = true })
        </div>
    </div>
    @section Scripts{@{Html.RegisterMvcPagerScriptResource();}}




